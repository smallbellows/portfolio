---
import type { HTMLAttributes } from 'astro/types';
import { iconPaths } from './IconPaths';

interface Props {
    icon: keyof typeof iconPaths;
    color?: string;
    gradient?: boolean;
    size?: string;
}

const { color = 'currentcolor', icon, size } = Astro.props;
const iconPath = iconPaths[icon];

const attrs: HTMLAttributes<'svg'> = { style: { '--color': color } };
if (size) attrs.style = { '--color': color, '--size': size };
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    width="40"
    height="40"
    viewBox="0 0 256 256"
    aria-hidden="true"
    stroke="currentColor"
    fill="currentColor"
    {...attrs}
>
    <g set:html={iconPath} />
</svg>

<style>
    svg {
        vertical-align: middle;
        width: var(--size, 1em);
        height: var(--size, 1em);
        color: var(--color);
    }
</style>
